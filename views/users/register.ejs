<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center mb-5">
	<div class="row">
		<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
			<div class="card shadow-lg">
				<img
					src="https://images.unsplash.com/photo-1626621338418-713655538d99?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1489&q=80"
					class="card-img-top"
				/>
				<div class="card-body">
					<h1 class="card-title">Register</h1>
					<form
						action="/register"
						method="POST"
						novalidate
						class="validated-form"
					>
						<div class="mb-3">
							<label for="username" class="form-label">Username</label>
							<input
								type="text"
								class="form-control"
								id="username"
								name="username"
								required
							/>
							<div class="valid-feedback">Looks good!</div>
							<div class="invalid-feedback">Please enter yor username</div>
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Email</label>
							<input
								type="email"
								class="form-control"
								id="email"
								name="email"
								required
							/>
							<div class="valid-feedback">Looks good!</div>
							<div class="invalid-feedback">Please enter yor email</div>
						</div>
						<div class="mb-3">
							<label for="password" class="form-label">Password</label>
							<input
								type="password"
								class="form-control"
								id="password"
								name="password"
								required
							/>
							<div class="valid-feedback">Looks good!</div>
							<div class="invalid-feedback">Please enter a secure password</div>
						</div>
						<div class="d-grid gap-2">
							<button type="submit" class="btn btn-success">Register</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
