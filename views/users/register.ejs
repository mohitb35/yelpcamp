<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">Sign Up</h1>
	<div class="col-6 offset-3">
		<form action="/register" method="POST" novalidate class="validated-form">
			<div class="mb-3">
				<label for="username" class="form-label">Username</label>
				<input
					type="text"
					class="form-control"
					id="username"
					name="user[username]"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">Please enter yor username</div>
			</div>
			<div class="mb-3">
				<label for="email" class="form-label">Email</label>
				<input
					type="email"
					class="form-control"
					id="email"
					name="user[email]"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">Please enter yor email</div>
			</div>
			<div class="mb-3">
				<label for="password" class="form-label">Password</label>
				<input
					type="password"
					class="form-control"
					id="password"
					name="user[password]"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">Please enter a secure password</div>
			</div>
			<div class="mb-3">
				<button type="submit" class="btn btn-success">Register</button>
			</div>
		</form>
		<a href="/">Home</a>
	</div>
</div>
